    private void loginButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        String username = usernameTextField.getText();
        String password = new String(passwordField.getPassword());

        boolean loginSuccess = false;

      
        for (int i = 0; i < CantidadUsuarios; i++) {
            if (usuarios[i].getUsername().equals(username) && usuarios[i].getPassword().equals(password)) {
                loginSuccess = true;
                break;
            }
        }

        
        if (loginSuccess) {
            messageArea.setText("¡Bienvenido, " + username + "!");
        } else {
            messageArea.setText("Usuario o contraseña incorrectos.");
    }
        

    }                                           

    private void usernameTextFieldActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        
        passwordField.requestFocus();
    }                                                 

    private void JPasswordFieldActionPerformed(java.awt.event.ActionEvent evt) {                                               

        String username = usernameTextField.getText();
        String password = new String(passwordField.getPassword());

        boolean loginSuccess = false;

        for (int i = 0; i < usuarios.length; i++) {
            if (usuarios[i].getUsername().equals(username) && usuarios[i].getPassword().equals(password)) {
                loginSuccess = true;
                break;
            }
        }

        if (loginSuccess) {
            messageArea.setText("¡Bienvenido, " + username + "!");
        } else {
            messageArea.setText("Usuario o contraseña incorrectos.");
        }
    }

   

